<h3>Listado de Productos</h3>
<h5>Muestra los Productos ingresados</h5>
<hr />
<table class="table table-bordered table-striped w-75 m-auto">
    <thead>
        <tr>
            <th>Código</th>
            <th>Título</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Stock</th>
        </tr>
    </thead>
    <tbody>
        {{#if productos}}
        {{#each productos}}
        <tr>
            <td>{{this.code}}</td>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.price}}</td>
            <td>{{this.stock}}</td>
        </tr>
        {{/each}}
        {{else}}
        <tr>
            <td colspan="5"><i>(No hay productos)</i></td>
        </tr>
        {{/if}}
    </tbody>
</table>